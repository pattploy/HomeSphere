<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_1111.Login"
             Title="Login">
    <Grid>
        <!-- Image Background -->
        <Image Source="Images\loginn.png.png" 
           Aspect="AspectFill" 
           Opacity="1" 
           Margin="0"/>
        <ScrollView>
            <VerticalStackLayout>
                <Button
                    x:Name="LoginrBtn"
                    Text="Log In" 
                    Clicked="OnLoginClicked"
                    HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>